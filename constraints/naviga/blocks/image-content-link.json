{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schema://naviga/block/image-content-link",
  "title": "Image content block link",
  "type": "object",
  "properties": {
    "uuid": {
      "type": "string"
    },
    "data": {
      "type": "object",
      "properties": {
        "width": {
          "type": "string",
          "pattern": "^\\d+$"
        },
        "height": {
          "type": "string",
          "pattern": "^\\d+$"
        },
        "text": {
          "type": "string"
        },
        "credit": {
          "type": "string"
        },
        "objectName": {
          "type": "string"
        },
        "instructions": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "photoDateTime": {
          "type": "string"
        },
        "copyright": {
          "type": "string"
        },
        "mimeType": {
          "type": "string"
        }
      },
      "required": [
        "width",
        "height"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "data",
    "uuid"
  ]
}
