{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "schema://naviga/block/author",
    "title": "Author link",
    "type": "object",
    "required": [ "rel", "type" ],
    "additionalProperties": false,
    "properties": {
	"uri": {
	    "type": "string"
	},
	"uuid": {
	    "type": "string"
	},
	"type": {
	    "type": "string",
	    "const": "x-im/author"
	},
	"rel": {
	    "type": "string",
	    "const": "author"
	},
	"title": {
	    "type": "string"
	},
	"data": {
	    "type": "object",
	    "additionalProperties": false,
	    "properties": {
		"email": {
		    "type": "string"
		},
		"shortDescription": {
		    "type": "string"
		},
		"longDescription": {
		    "type": "string"
		},
		"email": {
		    "type": "string"
		},
		"phone": {
		    "type": "string"
		},
		"facebookUrl": {
		    "type": "string",
		    "pattern": "^https:\\/\\/www\\.facebook\\.com\\/"
		},
		"twitterUrl": {
		    "type": "string",
		    "pattern": "^https:\\/\\/(www\\.)?twitter\\.com\\/"
		},
		"firstName": {
		    "type": "string"
		},
		"lastName": {
		    "type": "string"
		},
		"city": {
		    "type": "string"
		},
		"country": {
		    "type": "string"
		},
		"mobile": {
		    "type": "string"
		},
		"postalCode": {
		    "type": "string"
		},
		"streetAddress": {
		    "type": "string"
		}
	    }
	}
    }
}
